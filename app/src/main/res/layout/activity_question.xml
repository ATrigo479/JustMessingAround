<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Couldn't figure out how to have multiple Dialog openers in the same activity so this will bee the alternative....... Dont Cheat "
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="300dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.32999998">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. What is the sport I'm playing right now"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/q1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basketball" />

                <RadioButton
                    android:id="@+id/q1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tennis" />

                <RadioButton
                    android:id="@+id/q1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soccer" />

                <RadioButton
                    android:id="@+id/q1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Never" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Taylor Swift"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/q2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot Garbage Music" />

                <RadioButton
                    android:id="@+id/q2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ear Ejaculation" />

                <RadioButton
                    android:id="@+id/q2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carter" />

                <RadioButton
                    android:id="@+id/q2_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gonna" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Eric's Favorite Game Series"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/q3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Halo" />

                <RadioButton
                    android:id="@+id/q3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call of Duty" />

                <RadioButton
                    android:id="@+id/q3_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MineCraft" />

                <RadioButton
                    android:id="@+id/q3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Give" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Most Sheltered"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/q4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rosemi Lovelock" />

                <RadioButton
                    android:id="@+id/q4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gawr Gura" />

                <RadioButton
                    android:id="@+id/q4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Houshou Marine" />

                <RadioButton
                    android:id="@+id/q4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Favorite Gurl"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/question5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/q5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amatsuka Uta" />

                <RadioButton
                    android:id="@+id/q5_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finana Ryugu" />

                <RadioButton
                    android:id="@+id/q5_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ManlyBadassHero" />

                <RadioButton
                    android:id="@+id/q5_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Up" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/get_result"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>